<div class="row">
    <div class="col-md-8 offset-md-2">
        <article class="blog-post">
            <h1 class="mb-3"><%= post.title %></h1>
            <p class="text-muted">
                Posted on <%= new Date(post.createdAt).toLocaleDateString() %>
            </p>
            <div class="content">
                <%= post.content %>
            </div>
            <div class="mt-4">
                <a href="/" class="btn btn-secondary">Back to Posts</a>
            </div>
        </article>
    </div>
</div> 